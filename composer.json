{
    "name": "phplrt/phplrt",
    "type": "library",
    "description": "PHP Language Recognition Tool",
    "license": "MIT",
    "keywords": [
        "compiler",
        "parser",
        "ast",
        "trace",
        "llk",
        "ll1",
        "lookahead",
        "buffer",
        "grammar"
    ],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/phplrt"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "bin": [
        "bin/phplrt"
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-spl": "*",
        "ext-pcre": "*",
        "ext-mbstring": "*",
        "zendframework/zend-code": "~3.0",
        "symfony/console": "~3.4|~4.0"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\": "src/"
        }
    },
    "replace": {
        "phplrt/ast": "*",
        "phplrt/compiler": "*",
        "phplrt/exception": "*",
        "phplrt/io": "*",
        "phplrt/lexer": "*",
        "phplrt/parser": "*",
        "phplrt/position": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "brianium/paratest": "^2.1",
        "symfony/var-dumper": "~3.4|~4.0",
        "squizlabs/php_codesniffer": "~3.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Phplrt\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "phpcbf": [
            "@php vendor/squizlabs/php_codesniffer/bin/phpcbf -p --standard=PSR12 src"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
