{
    "name": "phplrt/phplrt",
    "type": "library",
    "description": "PHP Language Recognition Tool",
    "license": "MIT",
    "keywords": [
        "compiler",
        "parser",
        "ast",
        "trace",
        "llk",
        "ll1",
        "lookahead",
        "buffer",
        "grammar"
    ],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/phplrt"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-spl": "*",
        "ext-pcre": "*",
        "psr/log": "~1.1",
        "ext-mbstring": "*",
        "symfony/polyfill-php73": "~1.12",
        "phplrt/parser-contracts": "~2.0",
        "phplrt/lexer-contracts": "~2.0",
        "phplrt/ast-contracts": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\": "src/"
        }
    },
    "replace": {
        "phplrt/lexer": "*",
        "phplrt/parser": "*",
        "phplrt/position": "*",
        "phplrt/visitor": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "monolog/monolog": "~2.0",
        "brianium/paratest": "^2.1",
        "symfony/var-dumper": "~3.4|~4.0",
        "squizlabs/php_codesniffer": "~3.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Phplrt\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "master": "2.0.x-dev"
        }
    },
    "provide": {
        "phplrt/ast-contracts-implementation": "2.0",
        "phplrt/lexer-contracts-implementation": "2.0",
        "phplrt/parser-contracts-implementation": "2.0"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "phpcbf": [
            "@php vendor/squizlabs/php_codesniffer/bin/phpcbf -p --standard=PSR12 src"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
